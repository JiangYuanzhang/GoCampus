/* pages/curriculum/curriculum.wxss */
page {
  
  width: 100%;
  height: 100%;
  /* flex: 1; */
  
}
.timetable{
  padding-bottom: 60px;
}
.head {
  margin: 0 auto;
  display: flex;
  justify-content: center;
  width: 100%;
}
.head .head-title {
  margin:0 auto;
  font-size: 40rpx;
  text-align: center;
  align-items: center;
  display: flex;
}
.top{
  display: flex;
  flex-direction: row;
  
}
.top-text{
  margin-left: 35rpx;
  width: 90rpx;
  height: 35rpx;
  font-size: 25rpx;
  justify-content: center;
  display: flex;
  align-items: center;

  color: rgb(153, 51, 51);
  margin-right: 20rpx;
}
.content{
  display: flex;
  
}
.refresh{
  display: flex;
  margin-right: 20px;
  font-size: 12px;
}
.refresh image{
  width: 12px;
  height: 12px;
}
.left{
  width: 35rpx;
  
  height:1500rpx;
}

.left-text{
  font-size: 24rpx;
  text-align: center;
  color: rgb(153, 51, 51);
  margin-top: 110rpx;
}

.result{
  width: 90rpx;
  height: 270rpx;
  background: #66ecfd;
  position: absolute;
  justify-content: center;
  display: flex;
  border-radius: 5px;
  text-align: center;
  font-size: 17rpx;
  flex-direction: column;
  box-shadow: 0rpx 5rpx 5rpx 5rpx rgba(204, 152, 247, 0.1);
  
}
.name{
  margin-bottom: 20rpx;
}
.classroom{
  margin-top: 40rpx;
}
.btn{
  display: flex;
  margin: 30rpx auto;
  height: 60rpx;
  width: 500rpx;
  text-align: center;
  border-radius: 10px;
  box-shadow: 0rpx 5rpx 5rpx 5rpx rgba(204, 152, 247, 0.1);
  justify-content: center;
  align-items: center;
  margin-left: 100rpx;
  background: #90C652;

}

