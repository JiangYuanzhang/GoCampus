/*表示状态的圆形*/
.state-curcle {
  display: inline-flex;
  width: 350rpx;
  height: 350rpx;
  font-size: 2em;
  text-align: center;
  justify-content: center;
  align-items: center;
  white-space: nowrap;
  position: relative;
  background-size: cover;
  background-position: center;
  vertical-align: middle;
}

page{
  height: 100%;
}

.long-text {
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-line;
}

/* 帖子列表无数据样式 */
.no-data {
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	color: #a9a9a9;
	font-size: 12px;
}

.no-data image {
	display: block;
	width: 80px;
	height: 80px;
}