.table_head {
  width: 96%;
  margin: 30rpx auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background:rgba(247, 241, 244, 0.1);
  border-radius: 10rpx;
  box-shadow: 0rpx 5rpx 5rpx 5rpx rgba(204, 152, 247, 0.1);
  font-size: 30rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
.table_head .table_head_index{
  margin-left: 30rpx;
}
.table_head .table_head_numb{
  margin-left: -50rpx;
}
.table_head .table_head_credie{
  margin-right: -55rpx;
}
.table_head .table_head_score{
  margin-right: 25rpx;
}
.table {
  width: 96%;
  margin: 20rpx auto;
  display: flex;
  flex-direction: column;
  color: #5134c2;
  border-radius: 10rpx;
  box-shadow: 0rpx 5rpx 5rpx 5rpx rgba(204, 152, 247, 0.1);
  
 
}
.order,.scor,.credi {
  width: 20px;
  text-align: center;
}
 .table .subject {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 24rpx;  
}
 .table .subject .sub {
  display: block;
  width: 100px;
  /* height: 55px; */
  flex-wrap: wrap;
  text-align: center;
}  
.table .subject view {
  margin: 20rpx auto;
}