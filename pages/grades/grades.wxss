page {
  font-size: 25rpx;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  /* flex: 1; */
}
.head {
  margin: 20rpx auto;
  display: flex;
  justify-content: center;
  
  background:rgba(226, 120, 247, 0.1);
  width: 100%;
}
.head .head-title {
  margin:0 30rpx;
  font-size: 40rpx;
}
.head image{
  width: 60rpx;
  height: 60rpx;
}
.sum {
  display: flex;
  justify-content: space-between;
  }
.sum-study{
  margin-left: 300rpx; 
  color: rebeccapurple;
  font-size: 27rpx;
}
.sum-study-length{
  margin-right: 300rpx; 
  color: rebeccapurple;
  font-size: 27rpx;
}
.sum view {
  margin: 20rpx 50rpx;
}
