/* 页面 */
page {
	height: 100%;
	background-color: #ffffff;
}

/* 主容器 */
.main {
	min-height: 100%;
	padding-bottom: 50px;
	box-sizing: border-box;
}

/* 版块选择 */
.topic {
	width: 100%;
	padding: 20px 40rpx;
	font-size: 14px;
	box-sizing: border-box;
}

.topic .topic-wrapper {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}

.topic .topic-wrapper-inner {
	display: flex;
	flex-direction: row;
	align-items: center;
}

/* 选择版块图标 */
.topic .topic-icon {
	display: block;
	width: 20px;
	height: 20px;
}

/* 内容区 */
.content-wrapper {
	padding: 20px 40rpx;
	box-sizing: border-box;
}

/* 文本域 */
textarea {
	width: 100%;
	min-height: 100px;
	line-height: 2em;
	font-size: 15px;
}

/* 图片列表 */
.imgList {
	margin-top: 20px;
}

.imgList::after {
	content: '';
	display: block;
	clear: both;
}

/* 图片项 */
.imgList .img-item {
	width: 216.6rpx;
	height: 216.6rpx;
	margin: 0 10rpx 10rpx 0;
	position: relative;
	float: left;
	border-radius: 10px;
	overflow: hidden;
}

.imgList .img-item .img {
	display: block;
	width: 100%;
	height: 100%;
}

/* 删除图片按钮 */
.imgList .img-item .del-img-btn {
	display: block;
	width: 50rpx;
	height: 50rpx;
	background-color: rgba(0, 0, 0, 0.33);
	position: absolute;
	top: 0;
	right: 0;
	z-index: 100;
}

/* 底部操作栏样式 */
.bottom-bar {
	position: fixed;
	left: 0;
	width: 100%;
	height: 50px;
	background-color: #ffffff;
	box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
	padding: 0 40rpx;
	box-sizing: border-box;
	z-index: 1000;
}

.bar-wrapper {
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}

/* 选择图片按钮 */
.bottom-bar .img-selector {
	padding: 6px;
	border-radius: 4px;
	transition: background-color .3s;
}

/* 选择图片按钮点击样式 */
.bottom-bar .img-selector.active {
	background-color: #eeeeee;
}

/* 选择图片按钮图标 */
.bottom-bar .img-selector-icon {
	display: block;
	width: 20px;
	height: 20px;
}

/* 发布按钮 */
.bottom-bar .sub-btn {
	display: block;
	padding: 5px 8px;
	color: #5134c2;
	font-size: 14px;
	transition: opacity .3s;
}

/* 发布按钮点击样式 */
.bottom-bar .sub-btn.active {
	opacity: 0.8;
}